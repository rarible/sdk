{
	"compilerOptions": {
		"lib": ["es6", "dom"],
		"module": "commonjs",
		"target": "es2020",
		"incremental": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"declaration": true,
		"strict": true,
		"noImplicitReturns": false,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"baseUrl": "."
	},
}
